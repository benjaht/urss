import javax.swing.JOptionPane;
/**
 * Esta case defina los metodos utilizados en el programa
*/
public class ClaseModelo {

	/**
	 * Este metodo es la cual te dice si el numero es mayor, menor o has acertado
	 * Devuelve un boolean para cuando hayas acertado ser true y termine el proceso
	 */
	public boolean acertarNumero(String n1, int num) {
		boolean acertado = false;
		int numero1;
		numero1 = Integer.parseInt(n1);
		if(numero1<1 || numero1>100){
		
	
		}else
		if(numero1<num){
			JOptionPane.showMessageDialog(null, "El numero es mayor");


		}else if(numero1>num){
			JOptionPane.showMessageDialog(null, "El numero es menor");


		}else{
			JOptionPane.showMessageDialog(null, "Has acertado.");


			acertado = true;
		}
		return acertado;


	}
}

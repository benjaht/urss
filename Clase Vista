	public void ClaseNumeros(){
		juegoNumeros = getContentPane(); 
		setTitle("Acertar Numeros"); 
		setLayout(new FlowLayout()); 
		setSize(300,300);
		insertar = new JTextField("",10);

		etiquetaNumero2 = new JLabel("Introduce un numero del 1 al 100"); 
		Introducir = new JButton("Introducir");
		Atras = new JButton("Menu Principal");
		
	

		menuJuegos.add(etiquetaNumero2);
		menuJuegos.add(insertar);
		menuJuegos.add(Introducir);
		menuJuegos.add(Atras);

		
		
		setVisible(true);
	}
